{
  "compilerOptions": {
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "allowJs": false,
    "checkJs": false,
    "declaration": false,
    "strict": true,
    "removeComments": true,
    "isolatedModules": false,
    "allowSyntheticDefaultImports": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "src/*": ["src/*"],
      "config/*": ["config/*"]
    }
  },
  "include": ["config/**/*", "src/**/*", "typings/**/*"],
  "exclude": ["node_modules"]
}
